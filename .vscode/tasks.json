{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/src"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "command":"make",
            "args": ["clean"],
            "problemMatcher":[]
        },
        {
            "label": "debug-build",
            "dependsOn":"clean",
            "type": "shell",
            "command":"make",
            "args": ["OPTS=-g"],
            "options": {
                "cwd": "${workspaceFolder}/src"
            },
            "problemMatcher":"$gcc"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "make",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc",
            "options": {
                "cwd": "${workspaceFolder}/test"
            }

        }
    ]
}